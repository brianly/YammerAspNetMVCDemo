@model YammerAuthentication.Models.RegisterExternalLoginModel
@{
    ViewBag.Title = "Register";
}

<hgroup class="title">
    <h1>@ViewBag.Title.</h1>
    <h2>Associate your @ViewBag.ProviderDisplayName account.</h2>
</hgroup>

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Association Form</legend>
        <p>
            You've successfully authenticated with <strong>@ViewBag.ProviderDisplayName</strong>. These values have been
            brought over with your profile.
        </p>
        
        <p style="width:200px; margin-bottom: 20px;">
            <img src="@ViewBag.ProfileImage"/>
                @Html.LabelFor(m => m.Email)
                @Html.ValueFor(m => m.Email)
        </p>
        <p>Please customize the items below for this site and click the Confirm button to finish
            logging in.</p>
        <ol>
            <li class="name">
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                
                @Html.LabelFor(m => m.JobTitle)
                @Html.TextBoxFor(m => m.JobTitle)

                @Html.HiddenFor(m => m.Mugshot)

                @Html.LabelFor(m => m.ProfileUrl)
                @Html.TextBoxFor(m => m.ProfileUrl)

                @Html.ValidationMessageFor(m => m.UserName)

            </li>
        </ol>
        @Html.HiddenFor(m => m.ExternalLoginData)
        <input type="submit" value="Register" />
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
